<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="outlinedButtonMaterialComponentsTheme" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:theme">@style/Theme.MaterialComponents</item>
    </style>

    <style name="outlinedButtonNoInset" parent="@style/outlinedButtonMaterialComponentsTheme">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="buttonWithIcon" parent="@style/outlinedButtonNoInset">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="ovalButtonWithIcon" parent="@style/buttonWithIcon">
        <item name="shapeAppearanceOverlay">@style/rounded</item>
    </style>


    <style name="buttonFontIcon" parent="@style/buttonWithIcon">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="bigButton" parent="@style/buttonFontIcon">
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="smallButton" parent="@style/buttonFontIcon">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textInputLayoutWhiteTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="textInputLayoutWhiteStyle">
        <item name="android:theme">@style/textInputLayoutWhiteTheme</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeErrorColor">@color/white</item>
    </style>

    <style name="textInputEditTextWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="errorMessage" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
</resources>