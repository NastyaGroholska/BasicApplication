<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="outlinedButtonMaterialComponentsTheme" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:theme">@style/Theme.MaterialComponents</item>
    </style>

    <style name="ovalButtonWithIcon" parent="@style/outlinedButtonNoInset">
        <item name="shapeAppearanceOverlay">@style/rounded</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">60dp</item>
    </style>

    <style name="outlinedButtonNoInset" parent="@style/outlinedButtonMaterialComponentsTheme">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="buttonFont" parent="@style/outlinedButtonNoInset">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="bigButton" parent="@style/buttonFont">
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="smallButton" parent="@style/buttonFont">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>